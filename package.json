{
	"name": "svelte-playground-1",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:run": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:e2e": "vitest run --config vitest.e2e.config.ts",
		"test:e2e:ui": "vitest --ui --config vitest.e2e.config.ts",
		"test:e2e:ai": "USE_AI_ACTIONS=true vitest run --config vitest.e2e.config.ts",
		"test:e2e:ci": "concurrently -k -s first \"vite dev\" \"vitest run --config vitest.e2e.config.ts\""
	},
	"devDependencies": {
		"@browserbasehq/stagehand": "^3.0.6",
		"@internationalized/date": "^3.10.0",
		"@lucide/svelte": "^0.544.0",
		"concurrently": "^9.1.0",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.17",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/svelte": "^5.2.9",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^25.0.3",
		"@typescript-eslint/eslint-plugin": "^8.49.0",
		"@typescript-eslint/parser": "^8.49.0",
		"@vitest/ui": "^4.0.16",
		"bits-ui": "^2.14.4",
		"clsx": "^2.1.1",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.13.1",
		"globals": "^16.5.0",
		"jsdom": "^27.3.0",
		"playwright": "^1.57.0",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"svelte": "^5.45.6",
		"svelte-check": "^4.3.4",
		"tailwind-merge": "^3.4.0",
		"tailwind-variants": "^3.2.2",
		"tailwindcss": "^4.1.17",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"vite": "^7.2.6",
		"vitest": "^4.0.16",
		"zod": "^4.2.1"
	},
	"dependencies": {
		"date-fns": "^4.1.0",
		"date-fns-tz": "^3.2.0"
	}
}
